<MudCardContent>
    <MudTextField Label="Name" @bind-Value="@WidgetDTO.Name" AutoFocus OnlyValidateIfDirty="true" />`
    <MudSelect Label="Manufacturer" @bind-Value="WidgetDTO.ManufacturerId" @bind-Value:after="CheckManufacturerStatus">
        @foreach (var manufacturerDTO in ManufacturerDTOs)
        {
            <MudSelectItem T="int" value="@manufacturerDTO.ManufacturerId">
                @manufacturerDTO.Name
            </MudSelectItem>
        }
    </MudSelect>
    @if (ShowWidgetWillBeInactiveWarning)
    {
        <MudAlert Severity="Severity.Warning">
            The selected Manufacturer is inactive. The Widget will be inactive.
        </MudAlert>
    }
    <MudSelect T="int?" Label="Colour" @bind-Value="WidgetDTO.ColourId">
        @foreach (var colourDTO in ColourDTOs)
        {
            <MudSelectItem T="int?" value="@colourDTO.ColourId">
                @colourDTO.Name
            </MudSelectItem>
        }
    </MudSelect>
    <MudSelect T="int?" Label="Colour Justification" @bind-Value="WidgetDTO.ColourJustificationId">
        @foreach (var colourJustificationDTO in ColourJustificationDTOs)
        {
            <MudSelectItem T="int?" value="@colourJustificationDTO.ColourJustificationId">
                @colourJustificationDTO.Justification
            </MudSelectItem>
        }
    </MudSelect>
    <MudSelect Label="Status" @bind-Value="WidgetDTO.StatusId">
        @foreach (var widgetStatusDTO in WidgetStatusDTOs)
        {
            <MudSelectItem T="int" value="@widgetStatusDTO.StatusId">
                @widgetStatusDTO.StatusName
            </MudSelectItem>
        }
    </MudSelect>
    <MudTextField Label="Cost Price" @bind-value="WidgetDTO.CostPrice" />
    <MudTextField Label="Retail Price" @bind-value="WidgetDTO.RetailPrice" />
    <MudTextField Label="Stock Level" @bind-value="WidgetDTO.StockLevel" />
</MudCardContent>