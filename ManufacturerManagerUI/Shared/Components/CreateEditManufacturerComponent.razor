<MudCardContent>
    <MudTextField Label="Name" @bind-Value="@ManufacturerDTO.Name" AutoFocus OnlyValidateIfDirty="true" />
    <MudSelect Label="Status" @bind-Value="@ManufacturerDTO.StatusId">
        @foreach (var manufacturerStatusDTO in ManufacturerStatusDTOs)
        {
            <MudSelectItem T="int" Value="@manufacturerStatusDTO.StatusId">
                @manufacturerStatusDTO.StatusName
            </MudSelectItem>
        }
    </MudSelect>
</MudCardContent>