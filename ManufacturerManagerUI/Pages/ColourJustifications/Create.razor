@page "/colourjustification/create"
@inherits ColourJustificationBasePageClass

<PageTitle>Create Colour Justification</PageTitle>

<EditForm Model="@ColourJustificationDTO" OnValidSubmit="CreateColourJustification">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <MudGrid>
        <MudItem sm="7">
            <MudCard>
                <CreateEditColourJustificationComponent ColourJustificationDTO="@ColourJustificationDTO" />
                <MudCardActions>
                    <button type="submit" class="btn btn-primary">Create</button>
                    &nbsp;
                    <a href="/colourjustifications/index" class="btn btn-secondary">Cancel</a>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>

</EditForm>