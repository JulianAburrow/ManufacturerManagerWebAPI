@page "/colourjustification/view/{ColourJustificationId:int}"
@inherits ColourJustificationBasePageClass

<PageTitle>View Colour</PageTitle>

<br />

@if (ColourJustificationDTO is null)
{
    <MudAlert Severity="Severity.Info" ContentAlignment="HorizontalAlignment.Center">Loading Colour Justification...</MudAlert>
    return;
}

<MudGrid>
    <MudItem sm="7">
        <MudCard>
            <MudCardContent>
                <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                    <MudTabPanel Text="Colour Justification">
                        <MudField Label="Justification">@ColourJustificationDTO.Justification</MudField>
                        <MudField Label="Widgets">@ColourJustificationDTO.WidgetCount</MudField>
                    </MudTabPanel>
                    @if (ColourJustificationDTO.WidgetCount > 0)
                    {
                        <MudTabPanel Text="Widgets">
                            <DisplayWidgetListComponent WidgetDTOs="WidgetDTOs" />
                        </MudTabPanel>
                    }
                </MudTabs>
            </MudCardContent>
            <MudCardActions>
                @if (ColourJustificationDTO.WidgetCount == 0)
                {
                    <a href="colourjustification/edit/@ColourJustificationDTO.ColourJustificationId" class="btn btn-primary">Edit</a>
                    @:&nbsp;
                }
                <a href="/colourjustifications/index" class="btn btn-secondary">Back to List</a>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

